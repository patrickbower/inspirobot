{
  "greeting": {
    "question": {
      "morning": "Good morning",
      "afternoon": "Good afternoon",
      "evening": "Good Evening",
      "night": "Yawn... isn't is past your bedtime?"
    },
    "answer": "intro"
  },
  "intro": {
    "question": "Have you learnt anything recently?",
    "answer": {
      "yes": "title",
      "no": "suggestion",
      "input": true
    }
  },
  "title": {
    "question": "What's that?",
    "answer": {
      "input": "content"
    },
    "record": "title"
  },
  "content": {
    "question": "Can you give me the skinny on that?",
    "answer": {
      "textarea": "subject"
    },
    "record": "content"
  },
  "subject": {
    "question": "Sounds great! What sort of area is that?",
    "answer": {
      "input": "display"
    },
    "record": "subject"
  },
  "display": {
    "question": "Thats a great article - shall I save it?",
    "answer": {
      "yes": "save-article",
      "input": true
    },
    "display": "article"
  },
  "suggestion": {
    "question": "would you like me to suggestion something?",
    "answer": {
      "yes": "get-suggestion",
      "no": "make-suggestion",
      "input": true
    }
  },
  "restart": {
    "question": "Shame, perhaps we should start over?",
    "answer": {
      "yes": "intro",
      "input": true
    }
  },
  "make-suggestion": {
    "question": "Have you got a suggestion for me?",
    "answer": {
      "yes": "take-suggestion",
      "input": true
    }
  },
  "take-suggestion": {
    "question": "Lets hear it!",
    "answer": {
      "input": "add-suggestion"
    },
    "record": "suggestion"
  },
  "add-suggestion": {
    "question": "Shall I save it?",
    "answer": {
      "yes": "save-suggestion",
      "input": true
    }
  },
  "save-suggestion": {
    "question": "Thanks, do you want to do anything else?",
    "answer": {
      "yes": "intro",
      "indirect": "add-suggestion",
      "input": true
    },
    "action": "add-suggestion"
  },
  "display-article": {
    "question": "Would you like to save this?",
    "answer": {},
    "display": "article"
  },
  "save-article": {
    "question": "Do you need anything else sir?",
    "answer": {},
    "action": "save-article"
  },
  "get-suggestion": {
    "question": "Please select a topic",
    "answer": {
      "indirect": "content",
      "input": true
    },
    "record": "title",
    "action": "get-suggestion"
  },
  "listen-for-suggestion": {
    "listeners": ["idea", "suggestion", "topic"],
    "dialog": "_make-suggestion"
  }
