    "intro": {
        "question": "Have you learnt anything recently?",
        "answer": {
            "yes": "_title",
            "no": "_suggestion"
        }
    },
    "title": {
        "question": "What's that?",
        "answer": {
            "value": "_content",
            "no": "_restart"
        }
    },
    "content": {
        "question": "Can you give me the skinny on that?",
        "answer": {
            "value": "_subject",
            "no": "_restart"
        }
    },
    "subject": {
        "question": "Sounds great! What sort of area is that?",
        "answer": {
            "value": "_display",
            "no": "_restart"
        }
    },
    "display": {
        "question": "Thats a great article - shall I save it?",
        "answer": {
            "yes": "_display-article",
            "no": "_restart"
        }
    },
    "suggestion": {
        "question": "would you like me to suggestion something?",
        "answer": {
            "yes": "_get-suggestion",
            "no": "_restart"
        }
    },
    "restart": {
        "question": "Shame, perhaps we should start over?",
        "answer": false
    },
    "make-suggestion": {
        "listeners": ["idea", "suggestion", "topic"],
        "question": "Let's hear it",
        "answer": {
            "value": "_take-suggestion",
            "no": "_restart"
        }
    },
    "take-suggestion": {
        "question":
            "{read back the suggestion} - sounds great - shall I save it?",
        "answer": {
            "yes": "_add-suggestion",
            "no": "_restart"
        }
    },

    "display-article": {
        "function": "display-article"
