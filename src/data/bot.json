{
  "greeting": {
    "question": {
      "morning": "Good morning",
      "afternoon": "Good afternoon",
      "evening": "Good Evening",
      "night": "Yawn... isn't is past your bedtime?"
    },
    "answer": "intro"
  },
  "intro": {
    "question": "Have you learnt anything recently?",
    "answer": {
      "yes": "title",
      "no": "suggestion",
      "input": "default"
    }
  },
  "title": {
    "question": "What's that?",
    "answer": {
      "input": "content"
    },
    "record": "title"
  },
  "content": {
    "question": "Can you give me the skinny on that?",
    "answer": {
      "textarea": "subject"
    },
    "record": "content"
  },
  "subject": {
    "question": "Sounds great! What sort of area is that?",
    "answer": {
      "input": "display"
    },
    "record": "subject"
  },
  "display": {
    "question": "Thats a great article - shall I save it?",
    "answer": {
      "yes": "save-article",
      "input": "default"
    },
    "display": "article"
  },
  "suggestion": {
    "question": "would you like me to suggestion something?",
    "answer": {
      "yes": "get-suggestion",
      "input": "default"
    }
  },
  "restart": {
    "question": "Shame, perhaps we should start over?",
    "answer": {
      "yes": "intro",
      "input": "default"
    }
  },
  "take-suggestion": {
    "question": "{read back the suggestion} - sounds great - shall I save it?",
    "answer": {
      "yes": "add-suggestion",
      "input": "default"
    }
  },
  "make-suggestion": {
    "question": "Let's hear it",
    "answer": {
      "input": "take-suggestion"
    }
  },

  "display-article": {
    "display": "article"
  },
  "save-article": {
    "action": "save-article"
  },
  "get-suggestion": {
    "action": "get-suggestion"
  },
  "add-suggestion": {
    "action": "add-suggestion"
  },

  "listen-for-suggestion": {
    "listeners": ["idea", "suggestion", "topic"],
    "dialog": "_make-suggestion"
  }
}
